{
  "name": "dumbledore",
  "version": "1.1.0",
  "description": "Dumbledore the Slackbot",
  "main": "bin/bot.js",
  "scripts": {
    "pretest": "npm run lintfix && mongodb-runner start",
    "test": "better-npm-run test",
    "posttest": "mongodb-runner stop",
    "lint": "eslint -c .eslintrc .",
    "lintfix": "eslint -c .eslintrc . --fix",
    "postinstall": "npm run build",
    "start": "better-npm-run start",
    "predev": "npm run lintfix && mongodb-runner start",
    "dev": "npm-run-all --parallel dev:*",
    "dev:server": "better-npm-run dev:server",
    "dev:client": "better-npm-run dev:client",
    "build": "webpack --config ./page/webpack.config.prod.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kosslab-kr/Dumbledore"
  },
  "license": "MIT",
  "betterScripts": {
    "start": {
      "command": "node bin/bot.js"
    },
    "test": {
      "command": "jasmine"
    },
    "dev:server": {
      "command": "nodemon ./bin/bot.js --watch server --watch lib --watch bin --watch parse-server"
    },
    "dev:client": {
      "command": "webpack-dev-server --config ./page/webpack.config.dev.js"
    }
  },
  "dependencies": {
    "better-npm-run": "^0.1.0",
    "cron": "^1.3.0",
    "express": "^4.16.2",
    "http-proxy": "^1.16.2",
    "kerberos": "0.0.23",
    "lodash": "^4.17.4",
    "moment": "^2.19.2",
    "parse": "^1.10.0",
    "parse-dashboard": "^1.1.0",
    "parse-server": "^2.6.3",
    "prop-types": "^15.6.0",
    "random-js": "^1.0.8",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "semantic-ui-css": "^2.2.12",
    "semantic-ui-react": "^0.75.1",
    "serve-favicon": "^2.4.5",
    "slackbots": "^1.1.0"
  },
  "engines": {
    "node": ">=8.0 <9.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-regenerator": "^7.0.0-beta.31",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "file-loader": "^1.1.5",
    "jasmine": "^2.8.0",
    "mongodb-runner": "^3.6.1",
    "npm-run-all": "^4.1.1",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.0",
    "webpack-dev-server": "^2.9.2"
  }
}
